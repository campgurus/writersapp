<!-- reject method removes nil as well as empty strings-->
<% @doc.paragraphs.reject(&:blank?).each do |p| %>
	<%= a=raw(p.to_html) %>
	<% if !strip_tags(a).empty? %>
		<%= link_to "Comment", '#' %>
	<% end %>
<% end %>
